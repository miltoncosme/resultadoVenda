<script>
  $.fn.datepicker.dates['en'] = {
      days: ["Domingo", "Segunda", "Terça", "Quarta", "Quita", "Sexta", "Sabado", "Domingo"],
      daysShort: ["Dom", "Seg", "Ter", "Qua", "Qui", "Sex", "Sab", "Dom"],
      daysMin: ["Do", "Se", "Te", "Qu", "Qu", "Se", "Sa", "Do"],
      months: ["Janeiro", "Fevereiro", "Março", "Abril", "Maio", "Junho", "Julho", "Agosto", "Setembro", "Outubro", "Novembro", "Dezembro"],
      monthsShort: ["Jan", "Fev", "Mar", "Abr", "Mai", "Jun", "Jul", "Ago", "Set", "Out", "Nov", "Dez"],
      today: "Hoje"
  };    

  $('#datepicker').datepicker({
      format: 'dd/mm/yyyy'
  })
  .on('changeDate', function(ev){
    const data = String(ev.target.value).replace('/','.').replace('/','.');
    console.log(data);
    var sel= document.getElementById('caixa');
    let i, L = sel.options.length - 1;
    for(i = L; i >= 0; i--) {
        sel.remove(i);
    };
    sel.options[sel.options.length] = new Option('Caixa', 'Selecionar');
    sel.options[sel.options.length] = new Option('Todos','Todos');
    console.log(sel);
    $.ajax({url: `/api/finalizadora/caixasativos/${data}`, success: function(result){
      const {dados} = result;
      console.log('dados: ', dados);
      dados.forEach(function (item, indice, array) {
        console.log('item:', item.caixa);          
        sel.options[sel.options.length] = new Option(item.caixa,item.caixa);
      });
      let ctx = document.getElementById("myChart").getContext('2d');
      var myChart = new Chart(ctx,{});
      myChart.clear();
      myChart.destroy()
    }});
    $('#datepicker').datepicker('hide');
  });

  $('#caixa')
  .on('change', function(ev){
     const caixa = ev.currentTarget.value;
     const data  = document.getElementById('datepicker').value.replace('/','.').replace('/','.');
     console.log('select: ', caixa, data);
     $.ajax({url: `/api/vendas/${data}/${caixa}`, success: function(result){
      const {dados} = result;
      console.log('dados: ', dados);
      document.getElementById('qtdliquido').innerHTML   = `${dados.qtdvendaliq.toFixed(2).replace('.',',')}`;
      document.getElementById('qtdtotal').innerHTML     = `${dados.qtdvendabruto.toFixed(2).replace('.',',')}`;
      document.getElementById('qtdcancelado').innerHTML = `${dados.qtdvendacan.toFixed(2).replace('.',',')}`;
      document.getElementById('vlrliquido').innerHTML   = `R$ ${dados.liquido.toFixed(2).replace('.',',')}`;
      document.getElementById('vlrbruto').innerHTML     = `R$ ${dados.bruto.toFixed(2).replace('.',',')}`;
      document.getElementById('vlrcancelado').innerHTML = `R$ ${dados.cancelado.toFixed(2).replace('.',',')}`;
      
    }});       
  });

</script>


